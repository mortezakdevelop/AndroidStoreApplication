<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    tools:context=".ForgetPassword.VerificationEmail.ForgetPasswordVerificationActivity">


    <TextView
        android:id="@+id/tv_title_verifyEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_25dp"
        android:layout_marginRight="@dimen/margin_25dp"
        android:text="@string/verification_code"
        android:textColor="@color/white"
        android:textSize="@dimen/font_13sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <EditText
        android:id="@+id/et_input_verifyEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_25dp"
        android:layout_marginTop="@dimen/margin_13dp"
        android:layout_marginRight="@dimen/margin_25dp"
        android:background="@drawable/shape_edittext_stroke"
        android:hint="@string/hint_verification_code"
        android:inputType="number"
        android:paddingLeft="@dimen/padding_10dp"
        android:paddingTop="@dimen/padding_10dp"
        android:paddingRight="@dimen/padding_10dp"
        android:paddingBottom="@dimen/padding_10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/gray_light"
        android:textSize="@dimen/font_13sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_title_verifyEmail"
        app:layout_constraintWidth_percent="0.8" />

    <Button
        android:id="@+id/btn_verifyEmail"
        android:layout_width="0.dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_50dp"
        android:background="@drawable/shape_rect_gold"
        app:layout_constraintHeight_percent="0.4"
        android:text="@string/verify_code"
        android:textSize="@dimen/font_16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_input_verifyEmail"
        app:layout_constraintWidth_percent="0.4" />




</androidx.constraintlayout.widget.ConstraintLayout>